{
  "compilerOptions": {

    "target": "ES2022",
    "module": "es2020",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": ["./src/**/*", "./src/custom.d.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true
    }
  }
}
