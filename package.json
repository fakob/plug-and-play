{
  "name": "pixi-typescript-boilerplate",
  "version": "3.0.0",
  "description": "pixi.js typescript boilerplate webpack",
  "browserslist": "> 0.25%, not dead",
  "scripts": {
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server --hot --open",
    "build": "npx del-cli dist --force  && yarn run webpack -- --env.mode production",
    "dev": "yarn run webpack-dev-server -- --env.mode development --watch",
    "test": "npx jest",
    "code-coverage": "jest --coverage",
    "prettier": "npx prettier",
    "prettier:format": "yarn run prettier -- --write src/**/*.ts",
    "prettier:check": "yarn run prettier -- -c ./src/**/*.ts",
    "lint-check": "npx eslint ./src/**/*.ts",
    "code-style-check": "yarn run lint-check && yarn run prettier:check"
  },
  "author": "jkanchelov",
  "license": "MIT",
  "dependencies": {
    "@pixi/filter-drop-shadow": "^3.2.0",
    "@pixi/text-html": "^1.0.0",
    "axios": "^0.21.0",
    "color": "^3.1.3",
    "core-js": "^3.6.5",
    "dat.gui": "^0.7.7",
    "dexie": "^3.0.3",
    "eslint-webpack-plugin": "^2.4.3",
    "file-loader": "^6.2.0",
    "human-readable-ids": "^1.0.4",
    "monaco-editor-webpack-plugin": "^2.1.0",
    "pixi-text-input": "^1.0.5",
    "pixi-viewport": "^4.14.0",
    "pixi.js": "^5.3.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-monaco-editor": "^0.41.2",
    "strip-comments": "^2.0.1",
    "to-json-schema": "^0.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.11.2",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/jest": "^26.0.14",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node": "^14.11.2",
    "@types/optimize-css-assets-webpack-plugin": "^5.0.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/terser-webpack-plugin": "^4.2.0",
    "@types/webpack": "^4.41.22",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-loader": "^8.1.0",
    "babel-register": "^6.26.0",
    "copy-webpack-plugin": "^6.1.1",
    "css-loader": "^4.3.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.2",
    "jest-canvas-mock": "^2.2.0",
    "jsdom": "^16.4.0",
    "mini-css-extract-plugin": "^0.11.2",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "terser-webpack-plugin": "^4.2.2",
    "ts-jest": "^26.4.0",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "jest-canvas-mock"
    ]
  }
}
